<script language="JavaScript" type="text/javascript">
    
    
    function validateRequired(theForm) {
    
        var errormsg = new Array();
        errormsg[0] = " Your e-mail address";
        errormsg[8] = " Details of problem";
    
        var errorstring = "";
        var field0 = theForm.email.value;
        var field8 = theForm.details.value;
 
        if (field0 == "") errorstring += errormsg[0]+"\n";
        if (field8 == "") errorstring += errormsg[8]+"\n";
        
        if (errorstring != ""){
            alert("Please enter all required fields:\n"+errorstring);
            if (field0 == "") {theForm.email.focus();}
            else if  (field8 == "") {theForm.details.focus();}
            
            return false;
        }
        return true;
    }
    
    function fillAutoFields() {
    
        if (document.getElementById){
            var uaString = navigator.userAgent;
            if (uaString) document.errorForm.auto_UserAgent.value = uaString;
        }
        //alert(document.errorForm.auto_UserAgent.value + " " + document.errorForm.screen_num.value + " " + document.errorForm.auto_CourseName.value);
        
    }
    
    function submitErrorForm() {
    
        var ef = document.errorForm;
        var pf = document.pmtForm;
        if (ef == null || pf == null) alert("could not find error form!");
        
        // Validate the required fields:
        if ( !validateRequired(ef) ) return false;
        
        // Move the data from the error form fields into the pmt form fields:
        pf.name.value = ef.name.value;
        pf.description.value = "Vital 3 Error Report:\n\n" + ef.details.value + "\n\nerror_time = (" + ef.error_time.value + ")\nprev_steps = (" + ef.prev_steps.value + ")\n";
        pf.debug_info.value = "User Agent = (" + ef.auto_UserAgent.value + ")\n";
        pf.email.value = ef.email.value;
        
        pf.submit();
    }
    
	</script>
	
	
</head>

<body onload="fillAutoFields()">


